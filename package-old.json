{
  "name": "jupyter-kernel-client",
  "version": "0.1",
  "description": "Node implementation of the jupyter notebook protocol for kernel clients & kernel management.",
  "main": "index.js",
  "author": "Luke Simkins <luke@bitparadigm.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p .",
    "build-dev": "yarn clean && yarn build",
    "watch": "yarn run build-dev -- -w",
    "test": "jest --coverage",
    "tdd": "jest --watch",
    "clean": "rm -rf ./dist",
    "lint": "tslint -p tsconfig.json --exclude 'node_modules/**/*' --exclude 'web/*'",
    "typecheck": "npm run build -- --noEmit",
    "prepush": "npm run lint && npm run typecheck && npm test",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@types/jest": "^24.0.11",
    "@types/nock": "^9.3.1",
    "@types/request": "^2.48.1",
    "@types/request-promise-native": "^1.0.15",
    "@types/ws": "^6.0.1",
    "@types/zeromq": "^4.6.2",
    "jest": "^24.7.1",
    "module-alias": "^2.2.0",
    "nock": "^10.0.6",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.3",
    "ws": "^6.2.1",
    "zeromq": "^5.1.0"
  },
  "devDependencies": {
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0"
  },
  "_moduleAliases": {
    "@lib": "dist/lib"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.(ts|js|html)$": "<rootDir>/node_modules/ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "html"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts}"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "html"
    ],
    "moduleNameMapper": {
      "^@lib/(.*)$": "<rootDir>/src/lib/$1"
    },
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
